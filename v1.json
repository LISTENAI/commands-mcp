{
  "$ref": "#/definitions/CollectionSchema",
  "definitions": {
    "CollectionSchema": {
      "type": "object",
      "properties": {
        "commands": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the command"
              },
              "description": {
                "type": "string",
                "description": "A brief description of the command"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the argument"
                    },
                    "description": {
                      "type": "string",
                      "description": "A brief description of the argument"
                    },
                    "type": {
                      "type": "string",
                      "description": "The type of the argument (e.g., string, number, boolean)",
                      "default": "string"
                    },
                    "required": {
                      "type": "boolean",
                      "description": "Whether the argument is required"
                    }
                  },
                  "required": [
                    "name",
                    "description"
                  ],
                  "additionalProperties": false
                },
                "description": "The arguments for the command"
              },
              "command": {
                "type": "string",
                "description": "The command template with placeholders for arguments"
              }
            },
            "required": [
              "name",
              "description",
              "command"
            ],
            "additionalProperties": false
          },
          "description": "A collection of commands"
        }
      },
      "required": [
        "commands"
      ],
      "additionalProperties": false,
      "description": "A collection of commands with their specifications"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
