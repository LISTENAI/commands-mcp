{
  "$ref": "#/definitions/CollectionSchema",
  "definitions": {
    "CollectionSchema": {
      "type": "object",
      "properties": {
        "commands": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "A brief description of the command"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the argument"
                    },
                    "description": {
                      "type": "string",
                      "description": "A brief description of the argument"
                    },
                    "type": {
                      "type": "string",
                      "enum": [
                        "string",
                        "number",
                        "boolean"
                      ],
                      "default": "string",
                      "description": "The type of the argument (e.g., string, number, boolean)"
                    },
                    "required": {
                      "type": "boolean",
                      "description": "Whether the argument is required"
                    },
                    "default": {
                      "type": [
                        "string",
                        "number",
                        "boolean"
                      ],
                      "description": "The default value for the argument (type must match the type field)"
                    }
                  },
                  "required": [
                    "name",
                    "description"
                  ],
                  "additionalProperties": false
                },
                "description": "The arguments for the command"
              },
              "command": {
                "type": "string",
                "description": "The command template with placeholders for arguments"
              },
              "terminate": {
                "type": "object",
                "properties": {
                  "timeout": {
                    "type": "number",
                    "description": "Maximum duration in milliseconds before the command is automatically terminated"
                  },
                  "output": {
                    "type": "string",
                    "description": "Automatically terminate if the output contains this string. Regex is supported using /.../ syntax (e.g., /error/)"
                  }
                },
                "additionalProperties": false,
                "description": "Conditions under which the command will be automatically terminated"
              }
            },
            "required": [
              "description",
              "command"
            ],
            "additionalProperties": false
          },
          "description": "A collection of commands"
        }
      },
      "required": [
        "commands"
      ],
      "additionalProperties": false,
      "description": "A collection of commands with their specifications"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
