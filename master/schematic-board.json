{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Board",
  "type": "object",
  "properties": {
    "description": {
      "description": "Description of the board",
      "type": [
        "string",
        "null"
      ]
    },
    "devices": {
      "description": "List of devices on the board",
      "type": "array",
      "default": [],
      "items": {
        "$ref": "#/$defs/Device"
      }
    },
    "exposes": {
      "description": "List of pins that are exposed by the board",
      "type": "array",
      "default": [],
      "items": {
        "$ref": "#/$defs/Expose"
      }
    },
    "name": {
      "description": "Name of the board",
      "type": "string"
    },
    "soc": {
      "description": "SoC name used by the board",
      "type": "string"
    }
  },
  "required": [
    "name",
    "soc"
  ],
  "$defs": {
    "Connection": {
      "type": "object",
      "properties": {
        "function": {
          "description": "Function that the pin performs (e.g., `uart0.txd`, `i2c0.sda`)",
          "$ref": "#/$defs/Function"
        },
        "net": {
          "description": "Name of the pin or pad (e.g., `GPIO0`, `PB2`), may be with a prefix to\nindicate the a IO expander (e.g., `expander1:GPIO0`)",
          "$ref": "#/$defs/Net"
        }
      },
      "required": [
        "net",
        "function"
      ]
    },
    "Device": {
      "type": "object",
      "properties": {
        "buses": {
          "description": "Optional name of buses that the device exposes",
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "connects": {
          "description": "Pins connected to the device\n\nEach connection is represented as a string in the format `<pin_name>@<function>`,\ne.g., `PB2@uart0.txd`.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/Connection"
          }
        },
        "name": {
          "description": "Name of the device",
          "type": "string"
        },
        "pins": {
          "description": "Optional pins that the device exposes",
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/$defs/Pin"
          }
        }
      },
      "required": [
        "name",
        "connects"
      ]
    },
    "Expose": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the exposed connector (e.g., `CN1`, `J1`)",
          "type": "string"
        },
        "pins": {
          "description": "List of pins that are exposed by the connector (e.g., `PB2`, `GPIO0`)",
          "type": "array",
          "items": {
            "$ref": "#/$defs/Net"
          }
        }
      },
      "required": [
        "name",
        "pins"
      ]
    },
    "Function": {
      "oneOf": [
        {
          "description": "A simple function that doesn't have explicit signal pins, e.g., `gpio`, `pwm`",
          "type": "object",
          "properties": {
            "Simple": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "Simple"
          ]
        },
        {
          "description": "A function that is associated with a specific peripheral and signal, e.g., `uart0.txd`",
          "type": "object",
          "properties": {
            "Peripheral": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "signal": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "signal"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "Peripheral"
          ]
        }
      ]
    },
    "Net": {
      "oneOf": [
        {
          "description": "A net that directly connects to the SoC",
          "type": "object",
          "properties": {
            "DIRECT": {
              "type": "object",
              "properties": {
                "pin": {
                  "type": "string"
                }
              },
              "required": [
                "pin"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "DIRECT"
          ]
        },
        {
          "description": "A net that connects through a device",
          "type": "object",
          "properties": {
            "DEVICE": {
              "type": "object",
              "properties": {
                "device": {
                  "type": "string"
                },
                "pin": {
                  "type": "string"
                }
              },
              "required": [
                "device",
                "pin"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "DEVICE"
          ]
        }
      ]
    },
    "Pin": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the pin or pad (e.g., `GPIO0`, `PB2`)",
          "type": "string"
        },
        "pinmux": {
          "description": "List of functions that the pin can perform\n\nCan be names constructed with the format `<peripheral>.<signal>` (e.g.,\n`uart0.txd`, `i2c0.sda`) or just the function name (e.g., `gpio`, `pwm`).",
          "type": "array",
          "items": {
            "$ref": "#/$defs/Function"
          }
        }
      },
      "required": [
        "name",
        "pinmux"
      ]
    }
  }
}